{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Physics Scene Description",
  "description": "Standardized JSON schema for describing 2D physics scenarios generated by LLM or Visual Editor.",
  "type": "object",
  "required": ["version", "setup", "objects"],
  "properties": {
    "version": {
      "type": "string",
      "description": "Schema version, e.g., '1.0'",
      "default": "1.0"
    },
    "meta": {
      "type": "object",
      "description": "Metadata about the problem/scenario",
      "properties": {
        "title": { "type": "string" },
        "description": { "type": "string" },
        "difficulty": { "type": "string", "enum": ["easy", "medium", "hard"] },
        "source_text": { "type": "string", "description": "Original problem text" }
      }
    },
    "setup": {
      "type": "object",
      "description": "Global simulation settings",
      "properties": {
        "gravity": {
          "type": "object",
          "properties": {
            "x": { "type": "number", "default": 0 },
            "y": { "type": "number", "default": 9.8 }
          },
          "required": ["x", "y"]
        },
        "scale": {
          "type": "number",
          "description": "Pixels per meter ratio",
          "default": 50
        },
        "timeStep": {
          "type": "number",
          "default": 0.0166
        }
      }
    },
    "objects": {
      "type": "array",
      "description": "List of physical bodies in the scene",
      "items": {
        "type": "object",
        "required": ["id", "type", "params"],
        "properties": {
          "id": { "type": "string", "description": "Unique identifier" },
          "type": { 
            "type": "string", 
            "enum": ["block", "ball", "polygon", "ramp", "ground", "wall"] 
          },
          "params": {
            "type": "object",
            "properties": {
              "x": { "type": "number" },
              "y": { "type": "number" },
              "angle": { "type": "number", "description": "Rotation in degrees" },
              "isStatic": { "type": "boolean" },
              
              // Dimensions
              "width": { "type": "number" },
              "height": { "type": "number" },
              "radius": { "type": "number" },
              "vertices": { 
                "type": "array", 
                "items": { "type": "object", "properties": { "x": {"type":"number"}, "y": {"type":"number"} } } 
              },

              // Material Properties
              "mass": { "type": "number" },
              "density": { "type": "number" },
              "friction": { "type": "number", "minimum": 0, "maximum": 1 },
              "frictionAir": { "type": "number" },
              "restitution": { "type": "number", "description": "Bounciness (0-1)" },
              
              // Visuals
              "color": { "type": "string" },
              "label": { "type": "string", "description": "Text displayed on object" },
              
              // Advanced
              "plugin": { "type": "object" }
            },
            "required": ["x", "y"]
          }
        }
      }
    },
    "constraints": {
      "type": "array",
      "description": "Connections and constraints between bodies",
      "items": {
        "type": "object",
        "required": ["id", "type", "params"],
        "properties": {
          "id": { "type": "string" },
          "type": { 
            "type": "string", 
            "enum": ["spring", "ideal_rope", "ideal_pulley", "revolute", "prismatic"] 
          },
          "params": {
            "type": "object",
            "properties": {
              "bodyAId": { "type": "string" },
              "bodyBId": { "type": "string" },
              "pointA": { 
                "type": "object", 
                "properties": { "x": {"type":"number"}, "y": {"type":"number"} },
                "description": "Offset from bodyA center or world point if bodyA is null"
              },
              "pointB": { 
                "type": "object", 
                "properties": { "x": {"type":"number"}, "y": {"type":"number"} }
              },
              
              // Common properties
              "length": { "type": "number" },
              "stiffness": { "type": "number" },
              "damping": { "type": "number" },
              
              // Pulley specific
              "anchorA": { "type": "object", "properties": { "x": {"type":"number"}, "y": {"type":"number"} } },
              "anchorB": { "type": "object", "properties": { "x": {"type":"number"}, "y": {"type":"number"} } },
              "radius": { "type": "number", "description": "Pulley radius" }
            }
          }
        }
      }
    },
    "forces": {
      "type": "array",
      "description": "External forces applied to bodies (e.g., constant push)",
      "items": {
        "type": "object",
        "required": ["id", "type", "targetId"],
        "properties": {
          "id": { "type": "string" },
          "type": { "type": "string", "enum": ["constant_force", "impulse"] },
          "targetId": { "type": "string", "description": "ID of the body to apply force to" },
          "vector": {
            "type": "object",
            "properties": {
              "x": { "type": "number" },
              "y": { "type": "number" }
            },
            "required": ["x", "y"]
          },
          "point": {
            "type": "object",
            "description": "Application point (relative to body center). Default is center (0,0).",
            "properties": { "x": { "type": "number" }, "y": { "type": "number" } }
          }
        }
      }
    },
    "unknowns": {
      "type": "array",
      "description": "Variables that need to be solved or adjusted",
      "items": {
        "type": "object",
        "required": ["id", "target", "property"],
        "properties": {
          "id": { "type": "string" },
          "target": { "type": "string", "description": "ID of object/constraint" },
          "property": { "type": "string", "description": "Property path, e.g., 'params.mass'" },
          "range": {
            "type": "array",
            "items": { "type": "number" },
            "minItems": 2,
            "maxItems": 2,
            "description": "[min, max]"
          },
          "initialValue": { "type": "number" }
        }
      }
    }
  }
}
